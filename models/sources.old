version: 2

sources:
  - name: jaffle_shop
    description: This is a replicate of postgres db used by jaffle shop
    database: raw
    schema: jaffle_shop
    tables:
      - name: customers
        description: raw customer data
        columns:
          - name: id
            description: this is the primary key of the customer
            tests:
              - unique
              - not_null
      - name: orders
        freshness: 
          error_after:
            count: 2
            period: day
          warn_after:
            count: 1
            period: day
        loaded_at_field: _ETL_LOADED_AT
        description: oraw order data

  - name: stripe
    description: Stripe payment log
    database: raw
    freshness: 
      error_after:
        count: 2
        period: day
      warn_after:
        count: 1
        period: day
    loaded_at_field: _BATCHED_AT
    schema: stripe
    tables:
      - name: payment
        description: records for payments with method, payment id and orderid as reference 